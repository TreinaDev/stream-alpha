<% if @mode.eql? 1 %>
  
  <div class="w-full md:w-1/2 xl:w-1/3 p-6">
    <div class="bg-gradient-to-b from-<%= @color %>-200 to-<%= @color %>-100 border-b-4 border-<%= @color %>-600 rounded-lg shadow-xl p-5">
        <div class="flex flex-row items-center">
            <div class="flex-shrink pr-4">
            <div class="rounded-full p-5 bg-<%= @color %>-600"><i class="fa fa-wallet fa-2x fa-inverse"></i></div>
            </div>
            <div class="flex-1 text-right md:text-center">
                <h5 class="font-bold uppercase text-gray-600"> <%= @name %> </h5>
                <h3 class="font-bold text-3xl"> <%= @value %> <span class="text-<%= @color %>-500"><i class="fas fa-caret-up"></i></span></h3>
            </div>
        </div>
    </div>
  </div>  
<% elsif @mode.eql? 2%>
  <div class="w-1/4 h-full p-6">
    <div class="card card-<%= @type %> p-5">
      <div class="flex items-center justify-center">
        <div class="text-white align-middle flex-grow">
          <h3 class="font-bold text-3xl"> <%= @value %> <span class="text-<%= @color %>-500"><i class="fas fa-caret-up"></i></span></h3>
          <h2 class="font-bold text-white text-opacity-95"> <%= @name %> </h5>
        </div>
        <div class="w-1/5">
          <%= @icon.html_safe %>
        </div>
      </div>
    </div>
  </div>
<% end %>

