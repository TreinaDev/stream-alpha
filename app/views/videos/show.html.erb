<%= link_to 'Voltar', analysis_videos_path %>
<dl>
    <dt><%= Video.human_attribute_name(:name) %>: </dt>
    <dd><%= @video.name %></dd>

    <dt><%= Video.human_attribute_name(:description) %>: </dt>
    <dd> <%= @video.description %> </dd>

    <%= link_to Video.human_attribute_name(:video), @video.link %>

    <dt>Video.human_attribute_name(:feed_back)</dt>
    <dd> <%= @video.feed_back %> </dd>
</dl>
<% if admin_signed_in?  && @video.pending?%>
    <%= link_to 'Aprovar', approve_button_video_path, method: :post %>
    <%= link_to 'Rejeitar', refuse_button_video_path, method: :post %>
<% end %>

<% if admin_signed_in? && @video.refused? %>
    <%= form_with url: refuse_button_video_path(@video) do |form| %>
        <%= form.label :feed_back, t('.feed_back') %>
        <%= form.text_field :feed_back %>
        <%= form.submit 'Enviar' %>
    <% end %>
<% end %>