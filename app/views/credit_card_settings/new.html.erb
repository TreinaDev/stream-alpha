<h3> Cadastro de cartão de crédito </h3>

<%= form_with model: [@client_profile, @customer_payment_method, @credit_card_setting] do |f| %>

<div>
    <%= f.label :credit_card_name, 'Nome do titular do cartão' %>
    <%= f.text_field :credit_card_name %>
</div>

<div>
    <%= f.label :nickname, 'Apelido do cartão' %>
    <%= f.text_field :nickname %>
     <% @credit_card_setting.errors.full_messages_for(:nickname).each do |message| %>
      <li><%= message %></li>
    <% end %>
</div>

<div>
    <%= f.label :credit_card_number, 'Número do cartão' %>
    <%= f.text_field :credit_card_number %>
</div>

<div>
    <%= f.label :credit_card_expiration_date, 'Data de validade do cartão' %>
    <%= f.date_field :credit_card_expiration_date %>
</div>

<div>
    <%= f.label :credit_card_security_code, 'Código de segurança' %>
    <%= f.date_field :credit_card_security_code %>
</div>

  <%= f.submit 'Cadastrar um novo cartão' %>

<% end %>
