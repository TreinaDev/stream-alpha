<div class="rounded-tl-xl bg-gradient-to-r from-indigo-600 via-purple-600 to-gray-300 p-4 shadow ">
  <h3 class="flex-grow font-bold pl-2 text-2xl text-white">Conteúdos</h3>
</div>

<div class="pl-6 pt-5 flex flex-wrap">

  <%= link_to 'Ver Vídeos Pendentes', analysis_videos_path, class: "bg-indigo-500 border-2 p-1 rounded-lg text-white m-2 transition-colors duration-700
                                                                    hover:bg-white hover:text-indigo-500 hover:border-2 hover:border-indigo-500 focus:ring-4 
                                                                    focus:ring-indigo-300" %>

  <%= link_to 'Ver Planos de Assinatura', plans_path, class: "bg-indigo-500 border-2 p-1 rounded-lg text-white m-2 transition-colors duration-700
                                                              hover:bg-white hover:text-indigo-500 hover:border-2 hover:border-indigo-500 focus:ring-4 
                                                              focus:ring-indigo-300" %>

  <%= link_to 'Ver Playlists', playlists_path, class: "bg-indigo-500 border-2 p-1 rounded-lg text-white m-2 transition-colors duration-700
                                                       hover:bg-white hover:text-indigo-500 hover:border-2 hover:border-indigo-500 focus:ring-4 
                                                       focus:ring-indigo-300" %>

  <%= link_to 'Ver Categoria de Jogos', game_categories_path, class: "bg-indigo-500 border-2 p-1 rounded-lg text-white m-2 transition-colors duration-700
                                                                       hover:bg-white hover:text-indigo-500 hover:border-2 hover:border-indigo-500 focus:ring-4 
                                                                       focus:ring-indigo-300" %>

  <%= link_to 'Ver Jogos', games_path, class: "bg-indigo-500 border-2 p-1 rounded-lg text-white m-2 transition-colors duration-700
                                               hover:bg-white hover:text-indigo-500 hover:border-2 hover:border-indigo-500 focus:ring-4 
                                               focus:ring-indigo-300" %>

  <%= link_to 'Ver Streamers', streamer_profiles_path, class: "bg-indigo-500 border-2 p-1 rounded-lg text-white m-2 transition-colors duration-700
                                                               hover:bg-white hover:text-indigo-500 hover:border-2 hover:border-indigo-500 focus:ring-4 
                                                               focus:ring-indigo-300" %>

</div>

<div class="flex flex-wrap">

  <div class="w-full md:w-1/2 xl:w-1/3 p-6">
    <div class="bg-gradient-to-b from-purple-200 to-purple-100 border-b-4 border-purple-600 rounded-lg shadow-xl p-5">
        <div class="flex flex-row items-center">
            <div class="flex-shrink pr-4">
            <div class="rounded-full p-5 bg-purple-600"><i class="fa fa-wallet fa-2x fa-inverse"></i></div>
            </div>
            <div class="flex-1 text-right md:text-center">
                <h5 class="font-bold uppercase text-gray-600">Vídeos Disponíveis</h5>
                <h3 class="font-bold text-3xl"> <%= @videos_count || 0 %> <span class="text-purple-500"><i class="fas fa-caret-up"></i></span></h3>
            </div>
        </div>
    </div>
  </div>  

  <div class="w-full md:w-1/2 xl:w-1/3 p-6">
    <div class="bg-gradient-to-b from-green-200 to-green-100 border-b-4 border-green-600 rounded-lg shadow-xl p-5">
        <div class="flex flex-row items-center">
            <div class="flex-shrink pr-4">
            <div class="rounded-full p-5 bg-green-600"><i class="fa fa-wallet fa-2x fa-inverse"></i></div>
            </div>
            <div class="flex-1 text-right md:text-center">
                <h5 class="font-bold uppercase text-gray-600"> Vídeos em Analíse </h5>
                <h3 class="font-bold text-3xl"> <%= @videos_pending_count || 0 %> <span class="text-green-500"><i class="fas fa-caret-up"></i></span></h3>
            </div>
        </div>
    </div>
  </div>  

  <div class="w-full md:w-1/2 xl:w-1/3 p-6">
    <div class="bg-gradient-to-b from-indigo-200 to-indigo-100 border-b-4 border-indigo-600 rounded-lg shadow-xl p-5">
        <div class="flex flex-row items-center">
            <div class="flex-shrink pr-4">
            <div class="rounded-full p-5 bg-indigo-600"><i class="fa fa-wallet fa-2x fa-inverse"></i></div>
            </div>
            <div class="flex-1 text-right md:text-center">
                <h5 class="font-bold uppercase text-gray-600"> Playlists Ativas </h5>
                <h3 class="font-bold text-3xl"> <%= @playlists_count || 0 %> <span class="text-indigo-500"><i class="fas fa-caret-up"></i></span></h3>
            </div>
        </div>
    </div>
  </div>  

</div>

<div class="flex h-96">

  <div class="w-full pt-6 mx-6 h-full">

    <div class="bg-gray-100 border border-gray-300 shadow-lg rounded-lg h-full overflow-hidden">
      <div class="px-4 pt-4 mb-4 flex items-center justify-between">
        <div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Novos Vídeos</h3>
          <span class="text-base font-normal text-gray-500">Lista das submissões</span>
        </div>
        <div class="flex-shrink-0">
          <%= link_to "Ver Todos", videos_path, class: "text-sm font-blod text-cyan-600 hover:bg-gray-400 hover:text-white hover:font-bold rounded-lg p-2" %>
        </div>
      </div>
      <div class="h-full overflow-y-auto">
          <table class="w-full bg-white">
            <thead>
              <tr class="text-xs font-semibold tracking-wide text-center text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800">
                <th class="px-4 py-3">Título</th>
                <th class="px-4 py-3">Streamer</th>
                <th class="px-4 py-3">Jogo</th>
                <th class="px-4 py-3">Status</th>
                <th class="px-4 py-3">Data</th>
              </tr>
            </thead>
            <tbody class="bg-white text-center divide-y dark:divide-gray-700 dark:bg-gray-800">
              <% @videos.each do |video|%>
                <tr class="bg-gray-50 dark:bg-gray-800 hover:bg-gray-100 dark:hover:dark:text-gray-400">
                  <td class="px-4 py-3 text-sm text-center"> <%= link_to video.name, video %> </td>
                  <td class="px-4 py-3">
                    <div class="flex items-center text-sm justify-center">
                      <div class="relative hidden w-8 h-8 mr-3 rounded-full md:block">
                        <img class="object-cover w-full h-full rounded-full" src="https://images.unsplash.com/flagged/photo-1570612861542-284f4c12e75f?ixlib=rb-1.2.1&amp;q=80&amp;fm=jpg&amp;crop=entropy&amp;cs=tinysrgb&amp;w=200&amp;fit=max&amp;ixid=eyJhcHBfaWQiOjE3Nzg0fQ" alt="" loading="lazy" />
                        <div class="absolute inset-0 rounded-full shadow-inner" aria-hidden="true"></div>
                      </div>
                      <div>
                        <span class="font-semibold"> <%= video.streamer.email %> </span>
                      </div>
                    </div>
                  </td>
                  <td class="px-4 py-3 text-sm"> <%= video.game.name %> </td>
                  <td class="px-4 py-3 text-xs">
                    <span class="px-2 py-1 font-semibold leading-tight text-gray-700 bg-gray-100 rounded-full"> <%= Video.human_enum_name :status,  video.status %> </span>
                  </td>
                  <td class="px-4 py-3 text-sm"> <%= l video.created_at.to_date %> </td>
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>

  <div class="w-full md:w-1/2 xl:w-1/3 p-6 flex-none">
    <div class="pt-3 bg-gray-100 rounded-xl space-y-3 border border-gray-300">

      <div class="flex space-x-5 items-center py-2">
         <h2 class="pl-4 font-bold text-center text-xl text-green-700">Categorias de Jogos disponíveis</h2>
         <%= link_to "Nova Categoria", new_game_category_path, class: "bg-green-500 border-2 p-1 rounded-lg text-white m-2 transition-colors duration-700
                                                                       hover:bg-white hover:text-green-500 hover:border-2 hover:border-green-500 focus:ring-4
                                                                       focus:ring-green-300" %>
      </div>

      <div class="shadow-md overflow-y-auto h-72 rounded-b-xl">
        <%= @game_categories.each do |game_category| %>
          <div class="tab w-auto overflow-hidden border-t bg-green-500 hover:bg-green-700">
            <h3 class="block p-5 leading-normal text-white"><%= game_category.name %></h3>
          </div>
        <% end %>
      </div>
  </div>

</div>

