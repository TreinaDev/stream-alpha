<div class="rounded-tl-xl bg-gradient-to-r from-indigo-600 via-purple-600 to-gray-300 p-4 shadow ">
  <h3 class="flex-grow font-bold pl-2 text-2xl text-white">Conteúdos</h3>
</div>

<div class="pl-6 pt-5 flex flex-wrap">
  <%= render ButtonComponent.new(text: 'Ver Streamers', path: streamer_profiles_path, color: 'indigo')%>
  <%= render ButtonComponent.new(text: 'Ver Vídeos Pendentes', path: analysis_videos_path, color: 'indigo')%>
  <%= render ButtonComponent.new(text: 'Ver Planos de Assinatura', path: plans_path, color: 'indigo')%>
  <%= render ButtonComponent.new(text: 'Ver Playlists', path: playlists_path, color: 'indigo')%>
  <%= render ButtonComponent.new(text: 'Ver Categoria de Jogos', path: game_categories_path, color: 'indigo')%>
  <%= render ButtonComponent.new(text: 'Ver Jogos', path: games_path, color: 'indigo')%>
</div>

<div class="flex flex-wrap">
  <%= render CardComponent.new(name: 'Vídeos Disponíveis', color: 'purple', value: @videos_count, mode: 1)%>
  <%= render CardComponent.new(name: 'Vídeos em Analíse', color: 'green', value: @videos_pendentes, mode: 1)%>
  <%= render CardComponent.new(name: 'Visualizações', color: 'indigo', value: "10.199", mode: 1)%>
</div>

<div class="flex h-96">

  <div class="w-full pt-6 mx-6 h-full">
    <%= render TableVideosComponent.new(videos: @videos)%> 
  </div>

  <div class="w-full md:w-1/2 xl:w-1/3 p-6 flex-none">
    <div class="pt-3 bg-gray-100 rounded-xl space-y-3 border border-gray-300">

      <div class="flex space-x-5 items-center py-2">
         <h2 class="pl-4 font-bold text-center text-xl text-green-700">Categorias de Jogos disponíveis</h2>
         <%= render ButtonComponent.new(text: "Nova Categoria", path: new_game_category_path, color: "green", padding: 1)%>
      </div>

      <div class="shadow-md overflow-y-auto h-72 rounded-b-xl">
        <%= render GameCategoryCardComponent.with_collection(@game_categories, color: "green")%>
      </div>

    </div>
  </div>

</div>

