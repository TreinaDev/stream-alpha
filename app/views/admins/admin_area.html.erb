<h1>√Årea do administrador</h1>

<%= render 'game_categories/game_categories' %>

<div>
  <p> Jogos cadastrados na plataforma: </p>
    <% if @games.any? %>
    <% @games.each do |game| %>
      <%= "Nome: #{game.name}" %>
      <%= "Categorias: #{game.game_categories_list_as_string}" %>
      <%= "Adicionado em #{game.creation_date}, por #{game.admin.email}"%>
    <% end %>
  <% else %>
    <p>Nenhum jogo registrado.</p>
  <% end %>
  <%= link_to 'Registrar novo jogo', new_game_path%>
</div>
