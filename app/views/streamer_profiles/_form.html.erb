<%= form_with model: @streamer_profile do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: I18n.t(:name, scope: "activerecord.attributes.streamer_profile") %>
    <% field_errors(@streamer_profile, :name).each do |message|%>
      <%= message%>
    <%end%>
  </div>

  <div>
    <%= f.label :photo %>
    <%= f.file_field :photo %>
    <% field_errors(@streamer_profile, :photo).each do |message|%>
      <%= message%>
    <%end%>
  </div>

  <div>
    <%= f.label :description %><br>
    <%= f.text_area :description, rows: 5, cols: 50, placeholder: I18n.t(:description, scope: "activerecord.attributes.streamer_profile") %>
    <% field_errors(@streamer_profile, :description).each do |message|%>
      <%= message%>
    <%end%>
  </div>

  <div>
    <%= f.label :facebook %><br> 
    <%= f.text_field :facebook, placeholder: I18n.t(:facebook, scope: "activerecord.attributes.streamer_profile") %>
    <% field_errors(@streamer_profile, :description).each do |message|%>
      <%= message%>
    <%end%>
  </div>

  <div>
    <%= f.label :instagram %><br> 
    <%= f.text_field :instagram, placeholder: I18n.t(:instagram, scope: "activerecord.attributes.streamer_profile") %>
    <% field_errors(@streamer_profile, :description).each do |message|%>
      <%= message%>
    <%end%>
  </div>

  <div>
    <%= f.label :twitter %><br> 
    <%= f.text_field :twitter, placeholder: I18n.t(:twitter, scope: "activerecord.attributes.streamer_profile") %>
    <% field_errors(@streamer_profile, :description).each do |message|%>
      <%= message%>
    <%end%>
  </div>

  <div>
    <%= f.submit %>
  </div>

<% end %>
