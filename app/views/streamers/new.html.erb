<div class="w-full h-full bg-gray-100">
<div class="rounded-tl-xl bg-gradient-to-r from-indigo-600 via-purple-600 to-gray-300 p-4 shadow">
  <h3 class="flex-grow font-bold pl-2 text-2xl text-white">Cadastro de Novos Streamers</h3>
</div>


  <div class="max-w-2xl mx-auto px-6 sm:px-6 lg:px-8 mb-12">
    <div class="bg-white w-full shadow-lg rounded-xl p-8 sm:p-12 mt-32 border-l-4 border-indigo-600">

      <p class="text-2xl font-bold text-center text-gray-500">Informe os dados de cadastro do novo Streamer</p>

      <%= form_with model: @streamer do |f|%>
        <% unless @streamer.errors.full_messages_for(:email).any? %>

          <div class="md:flex items-center mt-12">
            <div class="w-full flex flex-col mx-auto">
              <%= f.label :email, class: "font-semibold leading-none text-gray-500" %>
              <%= f.text_field :email, class: "leading-none text-gray-600 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-200"  %>
            </div>
          </div>

        <% else %>

          <div class="items-center mt-12">
            <div class="w-full mx-auto">
              <%= f.label :email, class: "font-semibold leading-none text-gray-500" %>
              <%= f.text_field :email, class: "w-full leading-none text-gray-600 p-3 border border-red-300 focus:outline-none focus:border-blue-700 mt-4 borderb-2 border-gray-500 bg-gray-200"  %>
            </div>
          </div>

          <div class="items-center w-full">
            <% @streamer.errors.full_messages_for(:email).each do |message| %>
              <li class= "text-red-300 font-bold"><%= message %></li>
            <% end %>
          </div>

         <% end %>
        <% unless @streamer.errors.full_messages_for(:password).any? %>
          <div class="md:flex items-center mt-12">
            <div class="w-full flex flex-col mx-auto">
              <%= f.label :password, class: "font-semibold leading-none text-gray-500" %>
              <%= f.password_field :password, class: "leading-none text-gray-600 p-3 focus:outline-none focus:border-blue-700 mt-4 bg-gray-200"  %>
            </div>
          </div>


        <% else %>
            
          <div class="items-center mt-12">
            <div class="w-full mx-auto">
              <%= f.label :password, class: "font-semibold leading-none text-gray-500" %>
              <%= f.text_field :password, class: "w-full leading-none text-gray-600 p-3 border border-red-300 focus:outline-none focus:border-blue-700 mt-4 border-b-2 border-gray-500 bg-gray-200"  %>
            </div>
          </div>

          <div class="flex items-center w-full">
            <% field_errors(@streamer, :password).each do |message|%>
              <li class= "text-red-300 font-bold"><%= message %></li>
            <% end %>
          </div>

        <% end %>
        <div class="flex items-center justify-center w-full">
          <%= f.submit class: "mt-9 font-semibold leading-none text-white py-4 px-10 bg-indigo-700 rounded hover:bg-blue-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
