    <div class="max-w-2xl mx-auto px-6 sm:px-6 lg:px-8 mb-12">
        <div class="bg-gray-300 w-full shadow rounded p-8 sm:p-12 mt-32">
            <p class="text-2xl font-bold text-center text-white">Cadastro de nova categoria de jogos</p>
              <%= form_with model: @game_category do |f| %>
                <% unless @game_category.errors.any? %>
                  <div class="md:flex items-center mt-12">
                      <div class="w-full flex flex-col mx-auto">
                        <%= f.label :name, class: "font-semibold leading-none text-gray-300" %>
                        <%= f.text_field :name, class: "leading-none text-gray-50 p-3 focus:outline-none focus:border-blue-700 mt-4 border-0 bg-gray-800 rounded"  %>
                      </div>
                  </div>
                <% else %>
                  <div class="items-center mt-12">
                      <div class="w-full mx-auto">
                        <%= f.label :name, class: "font-semibold leading-none text-gray-300" %>
                        <%= f.text_field :name, class: "w-full leading-none text-gray-50 p-3 border border-red-300 focus:outline-none focus:border-blue-700 mt-4 border-0 bg-gray-800 rounded"  %>
                      </div>
                  </div>
                  <div class="flex items-center w-full">
                      <% @game_category.errors.full_messages_for(:name).each do |message| %>
                        <li class= "text-red-300 font-bold"><%= message %></li>
                      <% end %>
                  </div>
                <% end %>
                <div class="flex items-center justify-center w-full">
                  <%= f.submit class: "mt-9 font-semibold leading-none text-white py-4 px-10 bg-blue-700 rounded hover:bg-blue-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none" %>
                </div>
            <% end %>
        </div>
    </div>
